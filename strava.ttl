@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix schema: <http://schema.org/>.
@prefix wgs84_pos: <http://www.w3.org/2003/01/geo/wgs84_pos#lat>.
@prefix gn: <http://www.geonames.org/ontology#>.
@prefix dt: <https://www.datavillage.me/ontologies/digital-twin#>.
@base <http://sti2.at/> . #the base for the classes

<#PersonTriplesMap>
  rml:logicalSource [
    rml:source "https://www.strava.com/api/v3/athlete/activities";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.[*]"
  ];

  rr:subjectMap [
    rr:template "https://api.datavillage.me/users/{userId}";
    rr:class dt:Person
  ];

  rr:predicateObjectMap [
    rr:predicate dt:Person.id;
    rr:objectMap [
      rml:reference "$.userId"
    ]
  ];
   rr:predicateObjectMap [
      rr:predicate schema:Action;
      rr:objectMap [
        rr:parentTriplesMap <#ActionTriplesMap>;
            rr:joinCondition [
        			rr:child "$.userId";
        			rr:parent "$.userId";
        	    ]
      ]
    ].

<#ActionTriplesMap>
  rml:logicalSource [
    rml:source "https://www.strava.com/api/v3/athlete/activities";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.[*]"
  ];

   rr:subjectMap [
     rr:template "https://www.strava.com/api/v3/athlete/activities{start_time}";
     rr:class schema:Action;
   ];

  rr:predicateObjectMap [
    rr:predicate dt:TravelAction.id;
    rr:objectMap [
      rml:reference "$.id"
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate dt:TravelAction.dataProvider.url;
    rr:objectMap [
      rml:reference "https://www.strava.com"
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate dt:TravelAction.elapseTime;
    rr:objectMap [
      rml:reference "$.elapsed_time"
    ]
  ];

  rr:predicateObjectMap [
    rr:predicate dt:TravelAction.movingTime;
    rr:objectMap [
      rml:reference "$.moving_time"
    ]
  ];
  rr:predicateObjectMap [
    rr:predicate dt:TravelAction.elevationGain;
    rr:objectMap [
      rml:reference "$.elevation_gain"
    ]
  ];
    rr:predicateObjectMap [
        rr:predicate dt:TravelAction.distance;
        rr:objectMap [
  	  rml:reference "$.distance"
  	  ];
    ];
     rr:predicateObjectMap [
    	rr:predicate schema:TravelAction.startTime;
        rr:objectMap [
        rml:reference "$.start_date"
        ]
      ];
      rr:predicateObjectMap [
      	rr:predicate schema:TravelAction.description;
        rr:objectMap [
        rml:reference "$.name"
       ]
      ];

  rr:predicateObjectMap [
    rr:predicate dt:TravelAction.instrument;
    rr:objectMap [
      rr:parentTriplesMap <#InstrumentTriplesMap>;
          rr:joinCondition [
      			rr:child "$.type";
      			rr:parent "$.type";
      	    ]
    ]
  ].

  <#InstrumentTriplesMap>
  rml:logicalSource [
    rml:source "https://www.strava.com/api/v3/athlete/activities";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.[*]"
  ];

  rr:subjectMap [
    rr:template "https://www.strava.com/api/v3/athlete/activities/{type}";
    rr:class dt:Vehicle
  ];

  rr:predicateObjectMap [
    rr:predicate dt:Vehicle.name;
    rr:objectMap [
      rml:reference "$.type"
    ]
  ].