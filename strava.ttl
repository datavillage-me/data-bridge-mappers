@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix schema: <http://schema.org/>.
@prefix dt: <https://www.datavillage.me/ontologies/digital-twin#>.
@base <http://sti2.at/> . #the base for the classes

<#PersonTriplesMap>
  rml:logicalSource [
    rml:source "https://www.strava.com/api/v3/athlete/activities";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.[*]"
  ];

  rr:subjectMap [
    rr:template "https://api.datavillage.me/users/{userId}";
    rr:class schema:Person
  ];

  rr:predicateObjectMap [
    rr:predicate schema:agent;
    rr:objectMap [
      rr:parentTriplesMap <#ActionTriplesMap>;
          rr:joinCondition [
            rr:child "$.userId";
            rr:parent "$.userId";
            ]
    ]
  ].

<#ActionTriplesMap>
  rml:logicalSource [
    rml:source "https://www.strava.com/api/v3/athlete/activities";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.[*]"
  ];

   rr:subjectMap [
     rr:template "https://www.strava.com/api/v3/activities/{upload_id_str}";
     rr:class schema:Action;
   ];

   rr:predicateObjectMap [
        rr:predicate schema:Action.distance;
        rr:objectMap [
  	  rml:reference "$.distance"
  	  ];
    ];

    rr:predicateObjectMap [
    rr:predicate schema:Action.startTime;
      rr:objectMap [
      rml:reference "$.start_date"
      ]
    ];

    rr:predicateObjectMap [
      rr:predicate schema:Action.description;
      rr:objectMap [
      rml:reference "$.name"
      ]
    ];

    rr:predicateObjectMap [
      rr:predicate schema:Action.dataProvider;
      rr:objectMap [
        rr:constant "https://www.strava.com"
      ]
    ];


  rr:predicateObjectMap [
    rr:predicate schema:instrument;
    rr:objectMap [
      rr:parentTriplesMap <#InstrumentTriplesMap>;
          rr:joinCondition [
      			rr:child "$.type";
      			rr:parent "$.type";
      	    ]
    ]
  ].

  <#InstrumentTriplesMap>
  rml:logicalSource [
    rml:source "https://www.strava.com/api/v3/athlete/activities";
    rml:referenceFormulation ql:JSONPath;
    rml:iterator "$.[*]"
  ];

  rr:subjectMap [
    rr:template "https://www.datavillage.me/ontologies/digital-twin#{type}";
    rr:class dt:Vehicle
  ];

  rr:predicateObjectMap [
    rr:predicate dt:Vehicle.type;
    rr:objectMap [
      rml:reference "$.type"
    ]
  ].